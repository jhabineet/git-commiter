{
  "name": "git-commit-helper",
  "displayName": "git-commit-helper",
  "description": "Helps format consistent git commit messages",
  "repository": {
    "type": "git",
    "url": "https://github.com/jhabineet/git-commiter.git"
  },
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "resources": [
  {
    "path": "media",
    "type": "webview"
  }
],
  "contributes": {
    "viewsContainers": {
    "activitybar": [
      {
        "id": "gitHelperView",
        "title": "Git Commiter",
        "icon": "media/icon.svg"
      }
    ]
  },
  "views": {
    "gitHelperView": [
      {
        "id": "gitHelperPanel",
        "name": "Repo Tools"
      }
    ]
  },
    "commands": [
      {
        "command": "gitHelper.createRepoAndPush",
        "title": "GitHub: Init Repo & Push"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
